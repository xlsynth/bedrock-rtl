    name = "br_fifo_ctrl_1r1w_jg_test_suite",
    custom_tcl_body = "br_fifo_ctrl_1r1w_fpv.tcl",
    params = {
        "Depth": [
            "2",
            "5",
            "6",
        ],
        "EnableBypass": [
            "1",
            "0",
        ],
        "RamReadLatency": [
            "2",
