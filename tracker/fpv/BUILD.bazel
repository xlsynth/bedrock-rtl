)

br_verilog_fpv_test_suite(
    name = "br_tracker_reorder_buffer_flops_jg_test_suite",
    custom_tcl_body = "br_tracker_reorder_fpv.tcl",
    # TODO: temp check in to reproduce bug
    gui = True,
