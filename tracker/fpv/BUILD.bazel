            ("1", "4"),
            ("1", "6"),
            ("2", "6"),
        ],
    },
    params = {
        "EntryIdWidth": [
            "1",
            "2",
            "3",
        ],
        "NumEntries": [
            "2",
            "4",
            "6",
        ],
    },
    tool = "jg",
    top = "br_tracker_reorder",
    deps = [":br_tracker_reorder_fpv_monitor"],
)

# Bedrock-RTL Reorder Buffer (Flops Storage)

verilog_library(
    name = "br_tracker_reorder_buffer_flops_fpv_monitor",
